#include <shadow.hsh>

//Light struct has to be implemented like this
struct Light {

    vec4 location;
    vec4 direction;
    
    vec4 color;
    float intensity;
    
    float scatteringFactor;
        
    float radius;
    float alignment;

    Shadow shadow;

};

struct CloudShadow {

    mat4 vMatrix;
    mat4 pMatrix;

    mat4 ivMatrix;
    mat4 ipMatrix;

};