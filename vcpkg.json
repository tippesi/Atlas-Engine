{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
    "name": "atlas-engine",
    "version-string": "0.1.10",
    "port-version": 0,
    "builtin-baseline": "59b58fc56de40eaa279ae0208debcf5773a2db77",
    "homepage": "https://github.com/tippesi/Atlas-Engine",
    "description": "Cross platform toy render engine supporting physically based rendering and software ray tracing",
    "dependencies": [
        {
            "name": "sdl2",
            "features": [
                "vulkan"
            ]
        },
        "glm",
        "stb",
        {
            "name": "imgui",
            "version>=": "1.89.2",
            "features": [
                "docking-experimental"
            ]
        },
        "assimp",
        "vulkan-memory-allocator",
        "volk",
        "vulkan-headers",
        {
            "name": "glslang",
            "features": []
        },
        "spirv-reflect",
        "spirv-tools",
        "nlohmann-json",
        "gtest"
    ],
    "overrides": [
            { "name": "glm", "version": "0.9.8.0" },
            { "name": "assimp", "version": "5.2.5" },
            { "name": "spirv-tools", "version": "2022.1#0" },
            { "name": "glslang", "version": "11.11.0#1" },
            { "name": "sdl2", "version": "2.28.2" },
            { "name": "vulkan-memory-allocator",  "version": "3.0.1#3" },
            { "name": "volk",  "version": "1.3.250#0" },
            { "name": "vulkan-headers",  "version": "1.3.268.0#0" }
    ]
}
